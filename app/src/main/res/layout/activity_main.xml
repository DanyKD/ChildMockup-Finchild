<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/childID_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="Child Name"
               android:textAllCaps="true"
               android:textSize="14sp"
               android:textStyle="bold" />

           <Spinner
               android:id="@+id/childID_spinner"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="5dp"
               android:layout_weight="1" />
       </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/purchase_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/childID_CV"
        android:orientation="vertical">

        <TextView
            android:id="@+id/purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginBottom="10dp"
            android:text="Purchase"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/purchase_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purchase_view"
            android:layout_alignBottom="@id/purchase_view"
            android:layout_margin="5dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/purchase_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:textSize="12dp"
                    android:text="Date" />

                <Spinner
                    android:id="@+id/market_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp">
                </Spinner>

                <EditText
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="12dp"
                    android:text="Total Price" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Items"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchase_cv">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/item_spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp">
                </Spinner>

                <Spinner
                    android:id="@+id/qty_spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="5dp"
                    android:layout_weight="1"></Spinner>

                <EditText
                    android:id="@+id/item_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="10" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchase_cv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/item_spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_weight="1"></Spinner>

                <Spinner
                    android:id="@+id/qty_spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="5dp"
                    android:layout_weight="1"></Spinner>

                <EditText
                    android:id="@+id/item_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="10" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/purchase_cv">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_item"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/item_spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_weight="1"></Spinner>

                <Spinner
                    android:id="@+id/qty_spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="5dp"
                    android:layout_weight="1"></Spinner>

                <EditText
                    android:id="@+id/item_price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:text="10" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/purchase_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12dp"
            android:text="Make a Purchase" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ask4money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/purchase_view"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/send_msg_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="Ask for money"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mssage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/send_msg"
                    android:layout_margin="8dp"
                    android:textSize="10dp"
                    android:padding="8dp"
                    android:text="Please send me 100 kr" />

                <Button
                    android:id="@+id/send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Send" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>